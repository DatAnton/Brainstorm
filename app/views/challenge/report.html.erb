<h1 class="text-center">Send yourself a message</h1>
<hr>
<%= form_tag(challenge_report_path(@challenge), method: 'post') do %>
  <div class="row">
    <div class="col">
      <%= email_field(:email, '', { :placeholder => 'Your email...', :class => 'form-control' }) %>
    </div>
    <div class="col">
      <%= text_field(:subject, '', { :placeholder => 'Email subject...', :class => 'form-control'}) %>
    </div>
    <div class="col">
      <button type="submit" class="form-control btn btn-primary" name="button">Send email</button>
    </div>
    <% end %>
</div>
<div>
</div>
<hr>

<h2>Challenge:</h2><br>
<p><%= @challenge.problem %></p>
<p><strong>Timing: </strong><%= (@challenge.total_time / 60).to_i %>:<%= (@challenge.total_time % 60).to_i %>m</p>
<p><strong>Number of outputs: </strong><%= @challenge.answers.count %></p>
<p><strong>Outputs per minute: </strong><%= '%.2f' % (@challenge.answers.count.to_d / (@challenge.total_time.to_d / 60)).to_d %></p>
<br><br>
<strong>Outputs: </strong>
<% @challenge.answers.each do |answer| %>
  <p><%= answer.text %></p>
<% end %>
<br>
<% if @better %>
<div class="">
  <p><strong>Best outputs in terms of impact/cost: </strong></p>
  <p><%= @better.text %></p>
</div>
<% end %>
<hr>
<div class="text-center">
  <%= link_to "New Idea?", root_path, :class => 'btn btn-outline-primary btn-idea'%>
</div>
